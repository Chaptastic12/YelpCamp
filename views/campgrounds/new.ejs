<%- include("../partials/header") %>

	<div class="row">
		<div class="col-md-12 text-center">
			<h1>Create a new Campground</h1>
		</div>
	</div>
		
	<div clas="col-xs-12 col-md-6 col-lg-4">
		<form class="form-signin" action="/campgrounds" method="POST">
			<div class="form-group">
				<label for="Name" class="sr-only">Name</label>
				<input class="form-control" id="name" type="text" placeholder="Name of Campground" name="name" required>
			</div>
			<div class="form-group">
				<label for="image" class="sr-only">Image Url</label>
				<input class="form-control" id="image" type="text" placeholder="Image URL" name="image" required>
			</div>
			<div class="form-group">
				<label for="description" class="sr-only">Description</label>
				<input class="form-control" id="description" type="text" placeholder="Description of Campground" name="description" required>
			</div>
			<div class="form-group">
				<label for="cost" class="sr-only">Cost</label>
				<input class="form-control" id="cost" type="number" placeholder="Cost per night" name="cost" step="0.01" min="0" required>
			</div>
			<div class="form-group">
				<input class="btn btn-lg btn-default btn-primary btn-block" type="submit">
			</div>
		</form>
	</div>

	<div class="col-md-12">
		<div class="form-signin">
				<a href="/campgrounds">Go back</a>
		</div>
	</div>

<%- include("../partials/footer") %>